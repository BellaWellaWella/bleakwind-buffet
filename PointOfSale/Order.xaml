<UserControl x:Class="PointOfSale.Order"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="200">
    <DockPanel>
        <TextBlock Name="TextBlock1"  DockPanel.Dock="Top" FontWeight="Bold" TextAlignment="Center" FontSize="20">
            Items in Order:</TextBlock>
        <TextBox Name="TextBox1" DockPanel.Dock=" Top" FontWeight="Bold" TextAlignment="Center" FontSize="20"/>

        <TextBox Name ="Price" DockPanel.Dock="Bottom" Text="0.00" FontSize="20" />
        <TextBox Name ="Total" DockPanel.Dock="Bottom" Text="Total: " FontSize="20" FontWeight="Bold"/>
        
        <ListView Name="itemsListView" />
    </DockPanel>
</UserControl>

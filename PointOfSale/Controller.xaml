<UserControl x:Class="PointOfSale.Controller"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Border Name="switchableContent"  Grid.Column="0">
            <local:MenuChooser x:Name="menuChoose" HorizontalAlignment="Left" Width="600" Loaded="menuChoose_Loaded"/>
        </Border>
        <local:Order Grid.Column="1"/>
    </Grid>
</UserControl>
